
{% extends 'base.html.twig' %}

{% block title %}Schedule an Appointment{% endblock %}

{% block body %}
<h2 class="mb-4">Schedule an Appointment</h2>
{{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': ''}}) }}

    <div class="mb-3">
        {{ form_label(form.date, null, {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.date, {'attr': {'class': 'form-control', 'placeholder': 'Select a date and time'}}) }}
        {{ form_errors(form.date) }}
    </div>
    <div class="mb-3">
        {{ form_label(form.patientName, null, {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.patientName, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.patientName) }}
    </div>
    <div class="mb-3">
        {{ form_label(form.email, null, {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.email) }}
    </div>
    <div class="mb-3">
        {{ form_label(form.phone, null, {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.phone, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.phone) }}
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
{{ form_end(form) }}

{% block javascripts %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            flatpickr("#{{ form.date.vars.id }}", {
                enableTime: true,
                dateFormat: "Y-m-d H:i",
            });
        });
    </script>
{% endblock %}

