
{% extends 'base.html.twig' %}

{% block title %}Welcome to the Appointment System{% endblock %}

{% block body %}
<div class="container">
    <h1>Welcome to Our Appointment Scheduling System</h1>
    <p>Select one of the options below to proceed:</p>
    <ul>
        <li><a href="{{ path('appointment_schedule') }}">Schedule a New Appointment</a></li>
        <li><a href="{{ path('appointment_calendar') }}">View Appointment Calendar</a></li>
    </ul>

    {% if appointments is defined and appointments|length > 0 %}
    <h2>Upcoming Appointments</h2>
    <ul>
        {% for appointment in appointments %}
        <li>
            {{ appointment.date|date("Y-m-d H:i") }}: {{ appointment.patientName }}
            - {{ appointment.email }} - {{ appointment.phone }}
        </li>
        {% endfor %}
    </ul>
    {% else %}
    <p>No upcoming appointments.</p>
    {% endif %}
</div>
{% endblock %}

